<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
    		<groupId>com.albertsons.itds.parent</groupId>
            <artifactId>project-parent</artifactId>
    		<version>1.0.0-SNAPSHOT</version>
    </parent>
	<artifactId>build</artifactId>
	<packaging>pom</packaging>
	<dependencies>
         <dependency>
            <groupId>com.albertsons.itds.parent</groupId>
            <artifactId>releases</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds.parent</groupId>
            <artifactId>config</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds.parent</groupId>
            <artifactId>hive-udfs</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds.parent</groupId>
            <artifactId>pig-udfs</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
		<finalName>${mvn.project.name}-${mvn.project.version}</finalName>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>unpack-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack-dependencies</goal>
                            </goals>
                            <configuration>
                                <includeTypes>tar.gz</includeTypes>
                                <excludeArtifactIds>shell-functions</excludeArtifactIds>
                                <outputDirectory>${project.build.directory}/project-parent</outputDirectory>
                                <stripVersion>true</stripVersion>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>project-tar-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <appendAssemblyId>false</appendAssemblyId>
                                <descriptors>
                                    <descriptor>
                                        ${multi.module.project.root.dir}/libraries/assembly/src/main/resources/assemblies/project-parent-tar-assembly.xml
                                    </descriptor>
                                </descriptors>
                                <tarLongFileMode>posix</tarLongFileMode>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
	</build>
</project>
